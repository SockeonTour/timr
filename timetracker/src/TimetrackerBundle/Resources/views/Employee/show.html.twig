{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ employee.fullName }}</h1>
    
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>{{ employee.id }}</dd>
        <dt>Vorname</dt>
        <dd>{{ employee.firstName }}</dd>
        <dt>Nachname</dt>
        <dd>{{ employee.lastName }}</dd>
        <dt>Karten</dt>
        {% for card in employee.cards %}
            <dd>{{ card.signature }}</dd>
        {% endfor %}
    </dl>
    <a href="{{ path('employee_edit', { 'id': employee.id }) }}" class="btn btn-primary">
        Bearbeiten
    </a>
    <a href="{{ path('employee') }}" class="btn btn-default">
